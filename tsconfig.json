{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": ["src/**/*", "src/custom.d.ts"], // Make sure this is included
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "lib": ["dom", "es2016"],
    "resolveJsonModule": true,
    "baseUrl": "./src", // or your appropriate base url
    "paths": {
      "*.svg": ["./assets/images"]
    }
  },
}
